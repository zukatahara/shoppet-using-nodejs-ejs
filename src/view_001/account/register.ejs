<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="./../../../css/all.css">
    <link rel="stylesheet" href="./../../../css/bootstrap.css">
    <link rel="stylesheet" href="./../../../css/product-detail.css">
</head>

<body>
    <%-  include('./../public/header') %>
    <!-- dang ki -->
    <section id="register">
        <form action="" method="post">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 mg-auto">
                        <div class="content">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput"
                                    placeholder="name@example.com" name="username">
                                <label for="floatingInput">Số điện thoại</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" id="floatingPassword"
                                    placeholder="Password" name="password">
                                <label for="floatingPassword">Mật khẩu</label>
                            </div>

                            <button type="submit" class="btn btn-primary" style="text-align: center;">Đăng kí</button>
                        </div>

                        <div style="width:100%;height:0px;border:1px solid gray"></div>
                        <div class="login-account">
                            <p>Bạn đã có khài khoản? Đăng nhập tại <a href="/user/login">đây</a>.</p>

                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>
    <!-- /dang ki -->
    <%-  include('./../public/footer') %>
</body>

</html>