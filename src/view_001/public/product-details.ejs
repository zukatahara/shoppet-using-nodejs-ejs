<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>product-details</title>
    <link rel="stylesheet" href="./../../css/all.css">
    <link rel="stylesheet" href="./../../css/bootstrap.css">
    <link rel="stylesheet" href="./../../css/product-detail.css">
</head>

<body>
    <%-  include('./header') %>
    <!-- <%= product %>  -->
    <section id="product-detail">
        <div class="container">
            <div class="row jc-ct">
                <div class="col-md-4 col-sm-12 pt-1 pb-1">
                    <div class="box-image">
                        // src="data:image/png; base64,<%= product[0].image %> " class="img-fluid" alt="...">
                    </div>
                </div>

                <div class="col-md-4 col-sm-12 pt-1 pb-1 content">
                    <div>
                        <h4><%= product[0].name %></h4>
                        <h4><%= product[0].price %> <span>₫</span></h4>
                    </div>
                    <h6>Số lượng</h6>
                    <div>
                        <div class="btn-group" role="group" aria-label="Basic outlined example">
                            <button type="button" class="btn btn-outline-primary reduce">-</button>
                            <span class="btn amount">1</span>
                            <button type="button" class="btn btn-outline-primary increase">+</button>
                        </div>
                    </div>
                    <div class="product-buy">
                        <a href="/add-to-cart/<%= product[0].id %>">
                        <button type="button" class="btn btn-outline-primary" id="1">Mua</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%-  include('./footer') %>
</body>

</html>