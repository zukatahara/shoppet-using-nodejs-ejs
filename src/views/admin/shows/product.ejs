<%- include('./../header'); -%>
<div class="container mt-100">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <h1 class="text-center bg-red">Manager Product</h1>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <a href="./product/add" class="text-center">Add</a>
    </div>
    <% if (!result) { %>
    <h2>No product here!</h2>
    <% } %>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Stt</th>
            <th>Name</th>
            <th>Image</th>
            <th>Price</th>
            <th>Inventory</th>
            <th>Category</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody> 
          <% for( let i = 0; i < result.length; i++ ) { %>
          <tr>
            <td><%= i+1 %></td>
            <td><%= result[i].name %></td>
            <td style="width:100px ;">
              <img
                src="./../image/<%= result[i].image %>"
                width="100%"
              />
            </td>
            <td><%= result[i].price %></td>
            <td><%= result[i].inventory %></td>
            <td><%= result[i].category %></td>
            <td>
              <a href="./product/update/<%=result[i]._id%> ">Update</a>&nbsp;
              
              <a href="./product/delete/<%=result[i]._id%> ">Delete</a>&nbsp;

            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

